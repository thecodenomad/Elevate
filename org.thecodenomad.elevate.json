{
  "id": "org.thecodenomad.elevate",
  "runtime": "org.gnome.Platform",
  "runtime-version": "47",
  "sdk": "org.gnome.Sdk",
  "command": "elevate",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=dri",
    "--socket=wayland",
    "--allow=bluetooth",
    "--talk-name=org.bluez",
    "--socket=pulseaudio"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a",
    "/app/lib/python3.12/site-packages/pytest*",
    "/app/lib/python3.12/site-packages/_pytest",
    "/app/lib/python3.12/site-packages/pytest_cov*",
    "/app/lib/python3.12/site-packages/coverage*",
    "/app/lib/python3.12/site-packages/black*",
    "/app/lib/python3.12/site-packages/pylint*",
    "/app/lib/python3.12/site-packages/pyright*",
    "/app/lib/python3.12/site-packages/requests_mock*",
    "/app/lib/python3.12/site-packages/pytest_mock*"
  ],
  "modules": [
    {
      "name": "libportal",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/flatpak/libportal.git",
          "tag": "0.7.1"
        }
      ]
    },
    "python-build-deps.json",
    "python-deps.json",
    {
      "name": "elevate",
      "builddir": true,
      "buildsystem": "meson",
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ],
      "config-opts": ["--libdir=lib"]
    }
  ]
}
